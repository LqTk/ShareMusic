<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_full"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:padding="10dp"
            android:src="@drawable/ic_back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:textColor="@color/textColorBlack"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="online"
                android:textColor="@color/textColorGrey"
                android:textSize="13sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorGrey"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="资料"
            android:background="@drawable/selector_list_item_pressed"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout

            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlTextPulling="下拉刷新"
                app:srlTextRefreshing="加载中..."/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f4f4f4"
                android:divider="@null"
                android:listSelector="@color/transparent"
                android:paddingBottom="20dp"/>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f4f4f4"
            android:gravity="center_horizontal"
            android:paddingTop="70dp"
            android:text="您已关注医生，可以给医生留言了!"
            android:textColor="@color/hint_text"
            android:textSize="12sp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/layout_recording_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/progress_hud_bg"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:id="@+id/ll_recorder_anim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_mic"/>

                        <ImageView
                            android:id="@+id/icon_status"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/recorder"
                            android:visibility="visible"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_sec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="70sp"
                        android:visibility="gone"/>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/whiteGrey"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@color/white"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_voice_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/tv_switch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_voice"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_white_boder_rectangle_bg"
                android:hint="输入消息内容"
                android:imeOptions="actionSend"
                android:textColorHint="@color/main_grey"
                android:lineSpacingExtra="2dp"
                android:maxLines="4"
                android:minHeight="40dp"
                android:padding="3dp"
                android:textColor="@color/light_gray"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_faces"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_functions"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_functions"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="发送"
                    android:textColor="@color/textColorBlack"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_press_to_speak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:background="@drawable/selector_white_round_rect_bg"
            android:minHeight="40dp"
            android:gravity="center"
            android:text="按住说话"
            android:textColor="@color/light_gray"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>