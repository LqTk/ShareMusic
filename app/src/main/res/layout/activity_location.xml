<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LocationActivity"
    android:background="@color/color_f4f4f4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:focusable="false"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="所在位置"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/sp_16"/>
                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_search"
                    android:scaleType="centerInside"
                    android:padding="@dimen/dp_8"/>
            </RelativeLayout>
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srf_load_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_location"/>
                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlTextLoading="正在加载..."
                    app:srlTextPulling="上拉加载更多"
                    app:srlTextRelease="释放立即加载"
                    app:srlTextFailed="加载失败"
                    app:srlTextFinish="加载完成"/>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            <LinearLayout
                android:id="@+id/ll_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">
                <ProgressBar
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:indeterminateTint="@color/whiteGrey"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在搜索附近的位置"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_search">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="取消"
                    android:gravity="center"
                    android:textColor="@color/textColorBlue"
                    android:textSize="@dimen/sp_15"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_white_bg"
                    android:layout_toLeftOf="@+id/tv_cancel"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_5">
                    <ImageView
                        android:id="@+id/iv_search_iv"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_search_grey"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_toRightOf="@+id/iv_search_iv"
                        android:layout_toLeftOf="@+id/iv_delete_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:hint="搜索附近位置"
                        android:textColorHint="@color/main_grey"
                        android:background="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:singleLine="true"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_delete_search"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_delete_grey"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srf_load_poi"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rcy_poi"/>
                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlTextLoading="正在加载..."
                    app:srlTextPulling="上拉加载更多"
                    app:srlTextRelease="释放立即加载"
                    app:srlTextFailed="加载失败"
                    app:srlTextFinish="加载完成"/>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>