<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SocialPublishFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:background="@color/whiteGrey">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back"
                    android:padding="@dimen/dp_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/textColorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_head"
                    android:layout_width="match_parent"
                    android:background="@drawable/my_item_bg"
                    android:layout_height="@dimen/dp_60"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="头像"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <tk.com.sharemusic.myview.CircleImage
                        android:id="@+id/iv_head"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_right"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/default_head_boy"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/whiteGrey"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:background="@drawable/my_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:id="@+id/iv_right1"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_right1"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/textColorGrey"
                        android:text=""/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/whiteGrey"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <RelativeLayout
                    android:id="@+id/rl_sex"
                    android:background="@drawable/my_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:id="@+id/iv_right2"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_right2"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/textColorGrey"
                        android:text=""/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/whiteGrey"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <RelativeLayout
                    android:id="@+id/rl_age"
                    android:background="@drawable/my_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:id="@+id/iv_rightage"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_rightage"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="@color/textColorGrey"
                        android:text=""/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/whiteGrey"/>

                <RelativeLayout
                    android:id="@+id/rl_des"
                    android:background="@drawable/my_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人描述"
                        android:id="@+id/tv_des_head"
                        android:textColor="@color/textColorBlack"/>

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_right"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/tv_des"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_des_head"
                        android:layout_marginRight="@dimen/dp_10"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/textColorGrey"
                        android:text=""/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">
                <RelativeLayout
                    android:id="@+id/rl_my_public"
                    android:background="@drawable/my_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的发布"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">
                <RelativeLayout
                    android:id="@+id/rl_change_password"
                    android:background="@drawable/my_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改密码"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:id="@+id/iv_right4"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/whiteGrey"/>
                <RelativeLayout
                    android:id="@+id/rl_logout"
                    android:background="@drawable/my_item_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/textColorBlack"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>